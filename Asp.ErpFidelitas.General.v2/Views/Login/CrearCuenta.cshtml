@model Asp.ErpFidelitas.General.v2.Entities.User
@{
    ViewBag.Title = "CrearCuenta";
    Layout = "~/Views/Shared/_LayoutSecurity.cshtml";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Crear una cuenta!</h1>
                    </div>
                    @*<form class="user">*@
                    @using (Html.BeginForm("CrearCuenta", "Login", FormMethod.Post, new { @class = "user", id = "formRegister" }))
                    {


                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        @*<input type="text" class="form-control form-control-user" id="exampleFirstName"
            placeholder="First Name">*@
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control form-control-user", type = "text", id = "txtName", placeholder = "First Name" })
                    </div>
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        @*<input type="text" class="form-control form-control-user" id="exampleFirstName"
            placeholder="First Name">*@
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control form-control-user", type = "text", id = "txtUserName", placeholder = "Username" })
                    </div>
                </div>
                        <div class="form-group">
                            @*<input type="email" class="form-control form-control-user" id="exampleInputEmail"
                placeholder="Email Address">*@
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-user", type = "email", id = "txtEmail", placeholder = "Email Address" })
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @*<input type="password" class="form-control form-control-user"
                    id="exampleInputPassword" placeholder="Password">*@
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-control-user", type = "password", id = "txtPassword", placeholder = "Password" })
                            </div>
                            <div class="col-sm-6">
                                @*<input type="password" class="form-control form-control-user"
                    id="exampleRepeatPassword" placeholder="Repeat Password">*@
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-control-user", type = "password", id = "txtPassword2", placeholder = "Repet password" })
                            </div>
                        </div>
                        @*<a href="login.html" class="btn btn-primary btn-user btn-block">
                Register Account
            </a>*@
                        <input id="lnkRegister" class="btn btn-primary btn-user btn-block" type="submit" value="Registrar" />
                        <hr>
                    }
                    @*</form>*@
                    <hr>


                    <div class="text-center">
                        @Html.ActionLink("Olvido su contraseña?", "ForgotPassword", "Login")
                        @*<a class="small" href="forgot-password.html">Contraseña olvidada?</a>*@
                    </div>
                    <div class="text-center">
                        @Html.ActionLink("Ya tienes una cuenta?", "Index", "Login")
                        @*<a class="small" href="register.html">Crear cuenta</a>*@
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>